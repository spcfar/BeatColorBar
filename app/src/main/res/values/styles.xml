<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="dialog_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_title_color</item>
        <item name="colorPrimaryVariant">@color/main_title_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MeInfoTextLeftStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#999999</item>
    </style>


    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <!-- 任务状态样式设置-->


    <!-- 短信状态样式设置-->

    <!--底部弹框动画-->
    <style name="text_label_style">
        <item name="android:textColor">@color/color_label</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_content_style">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/main_bg_color</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_content_no_bg_style" parent="text_content_style">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="edit_content_style">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/main_bg_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">请输入</item>
    </style>

    <style name="btn_main_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="text_setting_style">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
